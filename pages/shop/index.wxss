/* pages/shop/index.wxss */

.shop-area-flex {
  flex-wrap: nowrap;
}

.shop-area-view {
  background: #fff;
  flex: 1;
  text-indent: 20rpx;
  padding: 10rpx 0;
}

.shop-area-view:first-child {
  margin-right: 10rpx;
}

.nav-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.nav-list-box {
  width: 25%;
  text-align: center;
  margin-bottom: 15rpx;
  line-height: 48rpx;
}

.nav-list-box image {
  width: 90rpx;
  height: 90rpx;
}

.shop-img {
  width: 100%;
  height: 280rpx;
}

.shop-lists {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 10rpx;
}

.shop-list-title {
  text-align: center;
  line-height: 60px;
  font-size: 32rpx;
}

.shop-lists .shop-lists-box {
  width: 360rpx;
  background: #f2f2f2;
}

.shop-lists .shop-lists-box>image {
  width: 100%;
  height: 352rpx;
}

.shop-lists-title {
  line-height: 48rpx;
  height: 96rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  display: -webkit-box;
}

.shop-lists-prce {
  font-size: 28rpx;
  color: red;
  margin-bottom: 20rpx;
}
